<%= erb :header %>
<div class="two-thirds column alpha omega" id="maincol">
  <h2 class="headline"><%= @user.username %>'s posts</h2>
  <div class="box"> 
  <% if @logged_in_user != @user %>
      <% if @logged_in_user.following?(@user) %>
        <a href="/<%= @logged_in_user.username %>/stopfollow/<%= @user.username %>">Stop following</a>
      <% else %>
        <a href="/<%= @logged_in_user.username %>/follow/<%= @user.username %>">Follow</a>
      <% end %><br /><br />
  <% end %>
   <%= erb :_posts %>
  </div>
</div>
<%= erb :follow %>

<%= erb :footer %>
